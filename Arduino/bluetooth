#include <SoftwareSerial.h>
SoftwareSerial BTSerial(10,11);

const int pwPin = 2;
#define trigPin 3
#define echoPin 4

float pulse1, sensor1;
float pulse2, sensor2;

float sensoryht,objekt;
float obj1;
float vert;
void setup() {

Serial.begin(9600);
pinMode(pwPin, INPUT);
pinMode(trigPin,OUTPUT);
pinMode(echoPin,INPUT);
BTSerial.begin(9600);
}

void read_sensor()
{
    digitalWrite(trigPin, LOW);  
  delayMicroseconds(2); 
  digitalWrite(trigPin, HIGH);
  delayMicroseconds(10);
  digitalWrite(trigPin, LOW);
   pulse2=pulseIn(echoPin,HIGH);
 pulse1=pulseIn(pwPin,HIGH);
 sensor1=pulse1/147*2.54;
 sensor2=pulse2/147*2.54;
 sensoryht=sensor1+sensor2;
 objekt=(23-(sensor1+sensor2));
}

void printall()
{
  Serial.println("\n1.Pari");
 Serial.print("Sensor1=");
 Serial.println(sensor1);
  Serial.print("Sensori2=");
   Serial.println(sensor2);
    Serial.print("Leveys=");
     Serial.println(objekt);
}
void bluetooth()
{
  BTSerial.write("\n[");
  BTSerial.write(objekt);
  BTSerial.write("]");
}
void vertailu()
{
digitalWrite(trigPin, LOW);  // Added this line
  delayMicroseconds(2); // Added this line
  digitalWrite(trigPin, HIGH);
  delayMicroseconds(10); // Added this line
  digitalWrite(trigPin, LOW);
   pulse2=pulseIn(echoPin,HIGH);
 pulse1=pulseIn(pwPin,HIGH);
 sensor1=pulse1/147*2.54;
 sensor2=pulse2/147*2.54;
 sensoryht=sensor1+sensor2;
 obj1=(23-(sensor1+sensor2));
vert=objekt-obj1;
abs(vert);
}

void loop()
{
  read_sensor();
  
  if(objekt<23)
  {
    printall();
    bluetooth();
    read_sensor();
    vertailu();
      if(vert<10) 
      {
        return bluetooth();
       }
        else
        {
        delay(500);
        }
  }
 
}
